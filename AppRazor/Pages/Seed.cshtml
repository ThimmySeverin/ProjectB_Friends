@page
@model SeedModel
@{
    ViewData["Title"] = "Seed";
}

<h3>Use this page to seed.</h3>

<div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" method="post" novalidate>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="nrItems" class="form-label">Number of friends in database: @Model.AmountOfFriends</label>
                        <input asp-for="CurrentSeeded" type="text" class="form-control" id="nrItems" placeholder="Select Amount" value="">
                        <span asp-validation-for="CurrentSeeded" class="invalid-feedback"></span>
                        
                        @* <label for="removeSeeds" class="form-check-label" >Clear before seeding</label>
                        <input asp-for="RemoveSeeds" class="form-check-input" type="checkbox" id="removeSeeds"> *@
                        
                    </div>
                </div>
                <button class="w-50 btn btn-primary btn-lg my-4" type="submit">Seed</button>
            </form>
        </div>
    </div>


