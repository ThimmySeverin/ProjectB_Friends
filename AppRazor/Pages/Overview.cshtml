@page
@model AppRazor.Pages.OverviewModel
@{
    ViewData["Title"] = "Overview";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link rel="stylesheet" href="~/css/overview.css" asp-append-version="true" />

</head>

<body class="body">
    <div class="container px-4 py-4" id="list-of-groups">
        <h2 class="pb-2 border-bottom" id="heading">List of all of my friends</h2>

        <form id="friendForm" method="post" class="needs-validation" novalidate>

            <div class="d-flex gap-2">
                <div class="col-md-8 ">
                    <input asp-for="filter" class="form-control" type="search"
                        placeholder="Search for Friend, City or Country " aria-label="Search">
                </div>
                <div class="col-md-2 ">
                    <button asp-page-handler="Search" class="btn btn-outline-success" type="submit">Search</button>
                </div>
            </div>





            <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-3 py-3" id="mainBackground">

                <div class="col-md-12 col-lg-12">
                    <div class="row mb-2 text-center">
                        <!-- This is where selected item id will be stored -->
                        <input type="hidden" name="friendId" data-seido-selected-item-id-target />

                        <div class="col-md-4 themed-grid-head-col" id="headerCategory">Friends </div>
                        <div class="col-md-2 themed-grid-head-col" id="headerCategory">City</div>
                        <div class="col-md-2 themed-grid-head-col" id="headerCategory">Pets</div>
                        <div class="col-md-2 themed-grid-head-col" id="addNewButton">
                            <a href="~/EditFriend" class="btn btn-success btn-sm m-1" type="button">New</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12">
                    <div class="row mb-2 text-center">

                        @if (Model.Friends is not null)
                        {
                            @foreach (var item in Model.Friends)
                            {
                                <div class="col-md-4 themed-grid-col" id="friendsrow">
                                    <a href="~/ViewFriend?id=@item.FriendId">
                                        @item.FirstName @item.LastName
                                    </a>
                                </div>

                                <div class="col-md-2 themed-grid-col" id="friendsrow">
                                    @if (item.Address?.City != null)
                                    {
                                        <p>@item.Address?.City</p>
                                    }
                                    else
                                    {
                                        <p>No address found</p>
                                    }

                                </div>

                                <div class="col-md-2 themed-grid-col" id="friendsrow">
                                    <p>@item.Pets.Count()</p>
                                </div>
                                <div class="col-md-2 themed-grid-col" id="buttonDiv">
                                    <a href="~/EditFriend?id=@item.FriendId" class="btn btn-secondary btn-sm m-1"
                                        type="button">Edit</a>

                                    <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal"
                                        data-bs-target="#delModal"
                                        data-seido-modal-body="@item.FirstName @item.LastName is about to be deleted."
                                        data-seido-selected-item-id="@item.FriendId">
                                        Del
                                    </button>
                                </div>
                            }
                            <nav aria-label="Standard pagination example">
                                <ul class="pagination" id="page-buttons">
                                    <li class="page-item">
                                        <a class="page-link" href="~/Overview?pagenr=@Model.PrevPageNr&search=@Model.filter"
                                            aria-label="Previous">
                                            <span aria-hidden="true">Previous</span>
                                        </a>
                                    </li>
                                    @for (int i = 0; i < Model.NrVisiblePages; i++)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="~/Overview?pagenr=@i&search=@Model.filter">@(i + 1)</a>
                                        </li>

                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="~/Overview?pagenr=@Model.NextPageNr&search=@Model.filter"
                                            aria-label="Next">
                                            <span aria-hidden="true">Next</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }

                    </div>
                </div>
            </div>
        </form>
        <div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Hello from modal
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" form="friendForm" asp-page-handler="DeleteFriend"
                            class="btn btn-primary btn-danger">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>